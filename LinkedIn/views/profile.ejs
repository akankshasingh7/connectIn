 <div ng-controller="displayDetail" class="panel panel-default" style="background-color:#ffffff; height: auto; width:auto;"  >
	<div class="panel-body">
		<div class="col-md-4">
			<div class="row">
				<img src="../images/pic2.jpg" alt=" Please upload your profile picture!" class="img-thumbnail" width="200" height="200">
			</div>
			<div class="row" style="background-color: lavender; width: 200px;">
				<a><p align="center">Add Photo</p></a>
			</div>
	  	</div>

 	<div class="col-md-8">
 		<div ng-repeat="x in user" >
			<div class="container" onmouseover="this.style.background='#eee';" onmouseout="this.style.background='white';" style="width:auto;" contenteditable="true">
				<h3><span ng-hide="editing" ng-click="editing = true">{{x.firstName}}</span> &nbsp;&nbsp;<span ng-hide="editing" ng-click="editing = true">{{x.lastName}}</span></h3>
				<p><span ng-hide="editing" ng-click="editing = true">{{x.city}} &nbsp; , &nbsp;</span><span ng-hide="editing" ng-click="editing = true">{{x.country}}</span></p>
				<p><span ng-hide="editing" ng-click="editing = true">{{x.schoolOrCompany}}</span></p>
				<p><span ng-hide="editing" ng-click="editing = true">{{x.role}}</span></p>
				<p style="padding-top: 20px;"><span ng-hide="editing" ng-click="editing = false">Last logged in at : {{x.lastLoggedIn}}</span></p>
				<form ng-show="editing" ng-submit="editing = false">
                    <label>FirstName:</label>
                    <input type="text" ng-model="x.firstName" placeholder="firstName" ng-required/>
                    <label>Last Name:</label>
                    <input type="text" ng-model="x.lastName" maxlength="4" placeholder="firstName" />
                    <label>City:</label>
                    <input type="text" ng-model="x.city" maxlength="4" placeholder="Year" />
                    <label>Country:</label>
                    <input type="text" ng-model="x.country" placeholder="Date" />
                    <label>School/Company</label>
                    <input type="text" ng-model="x.schoolOrCompany" placeholder="Name" />
                    <label>Role</label>
                    <input type="text" ng-model="x.role" placeholder="activities"/>
                    <br/>
                    <button class="btn btn-info " type="submit" ng-click="editDetail(x)">Save</button> &nbsp;&nbsp; <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
                  </form>
			</div>
		</div>
		</div>
 	</div>
 	<div class="panel-footer" align="center">My Details</div>
</div>
 <div class="container" style="height: 10px"></div>
<div ng-controller="displaySummary" class="panel panel-default" style="background-color:#ffffff; height: auto; width:auto;"  >
	<div class="panel-body">
	<h2>Summary</h2>
					<div id="addSummary" class="collapse">
					<form class="form-horizontal" role="form">
						<div class="form-group">
			    			<label class="comment">Summary</label>
			    			<textarea ng-model="summary" rows="4" maxlength="500" class="form-control" id="focusedInput" type="text" placeholder="Enter School Name" required="required"></textarea>
						 </div>
 						 <button type="submit" ng-click="saveSummary()" class="btn btn-info">Save</button>&nbsp;&nbsp; <button data-toggle="collapse" data-target="#addSummary" type="button" class="btn btn-default">Cancel</button>
 			 
 					</form>
 					</div>
 					<div ng-repeat="x in summarys" >
 					<div class="container" onmouseover="this.style.background='#eee';" onmouseout="this.style.background='white';" style="width:auto;" contenteditable="true">
			
 					<p><span ng-hide="editing" ng-click="editing = true">{{x.summary}}</span></p>
 						 <form ng-show="editing" ng-submit="editing = false">
 		 						 <label>Description:</label>
                   				 <input type="text" ng-model="x.summary" placeholder="description"/>
                 			   <br/>
                  		  		<button class="btn btn-info " type="submit" ng-click="editSum(x)">Save</button> &nbsp;&nbsp; <button class="btn btn-warning" ng ng-click="cancel()">Cancel</button>
                  		 </form>
                  	</div>
                  	</div>
 			
 	</div>
 	<a><div class="panel-footer"  data-toggle="collapse" data-target="#addSummary" style="text-align: center;">Add Summary</div></a>
		
		
</div>  

 <div class="container" style="height: 10px"></div>       
<div ng-controller="displayEducation" class="panel panel-default" style="background-color:#ffffff; height: auto; width:auto;" >
 	<div class="panel-body">
 	<h2>Education</h2>
 	
		<div id="addEducation" class="collapse">
		<form class="form-horizontal" role="form">
			<div class="form-group">
    			<label class="col-sm-2 control-label">School Name</label>
    			<div class="col-sm-10">
      				<input ng-model="school" class="form-control" id="focusedInput" type="text" placeholder="Enter School Name" required="required">
   				 </div>
 			 </div>	 			
 			  <div class="form-group">
    			<label class="col-sm-2 control-label"> From:</label>
    			<div class="col-sm-4">
      				<input ng-model="dateFrom" maxlength="4" class="form-control" id="focusedInput" type="number" placeholder="Enter Year">
   				 </div>
   				 <label class="col-sm-2 control-label"> Till:</label>
    			<div class="col-sm-4">
      				<input ng-model="dateTill" maxlength="4" class="form-control" id="focusedInput" type="number" placeholder="Enter Year">
   				 </div>
 			 </div>
 			 <div class="form-group">
    			<label class="col-sm-2 control-label">Field of Study</label>
    			<div class="col-sm-10">
      				<input ng-model="fieldOfStudy" class="form-control" id="focusedInput" type="text" placeholder="Enter field of study">
   				 </div>
 			 </div>
 			 <div class="form-group">
    			<label class="col-sm-2 control-label">Grades</label>
    			<div class="col-sm-10">
      				<input ng-model="grade" class="form-control" id="focusedInput" type="number" placeholder="Enter grades">
   				 </div>
 			 </div>
 			 <div class="form-group">
				  <label for="comment">Activities:</label>
				  <textarea ng-model="activities" class="form-control" rows="4" maxlength="500" id="comment"></textarea>
			</div>
			<div class="form-group">
			  <label for="comment">Description:</label>
			  <textarea ng-model="description" class="form-control" rows="5" maxlength="500" id="comment"></textarea>
			</div>
			<button type="submit" ng-click="saveEduInfo()" class="btn btn-info">Save</button>&nbsp;&nbsp; <button data-toggle="collapse" data-target="#addEducation" type="button" class="btn btn-default">Cancel</button>
 			 </form>
			</div>
		<div ng-repeat="x in schools" >
			<div class="container" onmouseover="this.style.background='#eee';" onmouseout="this.style.background='white';" style="width:auto;" contenteditable="true">
				<h3><span ng-hide="editing" ng-click="editing = true">{{x.school}}</span></h3>
				<p><span ng-hide="editing" ng-click="editing = true">{{x.dateFrom}} - {{x.dateTill}}</span></p>
				<p><span ng-hide="editing" ng-click="editing = true">{{x.fieldOfStudy}}</span></p>
				<p><span ng-hide="editing" ng-click="editing = true">{{x.grade}}</span></p>
				<p><span ng-hide="editing" ng-click="editing = true">{{x.activities}}</span></p>
				<p><span ng-hide="editing" ng-click="editing = true">{{x.description}}</span></p>
				<form ng-show="editing" ng-submit="editing = false">
                    <label>Name:</label>
                    <input type="text" ng-model="x.school" placeholder="Name" ng-required/>
                    <label>Date From:</label>
                    <input type="number" ng-model="x.dateFrom" maxlength="4" placeholder="Year" />
                    <label>Date Till:</label>
                    <input type="number" ng-model="x.dateTill" maxlength="4" placeholder="Year" />
                    <label>Field of Study:</label>
                    <input type="text" ng-model="x.fieldOfStudy" placeholder="Date" />
                    <label>Grade:</label>
                    <input type="text" ng-model="x.grade" placeholder="Name" />
                    <label>Activities:</label>
                    <input type="text" ng-model="x.activities" placeholder="activities"/>
                   <label>Description:</label>
                    <input type="text" ng-model="x.description" placeholder="description"/>
                  
                    <br/>
                    <button class="btn btn-info " type="submit" ng-click="editEdu(x)">Save</button> &nbsp;&nbsp; <button class="btn btn-warning" ng ng-click="cancel()">Cancel</button>
                  </form>
			</div>
		</div>
		</div>
		<a><div class="panel-footer"  data-toggle="collapse" data-target="#addEducation" style="text-align: center;">Add Education</div></a>
		</div>

