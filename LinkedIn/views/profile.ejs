<div ng-controller="displayExperience" class="panel panel-default" style="background-color:#ffffff; height: auto; width: auto;" >
	<div class="panel-body">
	<h2>Experience</h2>
		<div id="addExperience" class="collapse">
		<form class="form-horizontal" role="form">
			<div class="form-group">
    			<label class="col-sm-2 control-label">Title</label>
    			<div class="col-sm-10">
      				<input ng-model="title" class="form-control" id="focusedInput" type="text" placeholder="Enter Role" required="required">
   				 </div>
 			 </div>	 			
 			  <div class="form-group">
    			<label class="col-sm-2 control-label"> From:</label>
    			<div class="col-sm-4">
      				<input ng-model="dateFrom" maxlength="4" class="form-control" id="focusedInput" type="number" placeholder="Enter Year">
   				 </div>
   				 <label class="col-sm-2 control-label"> Till:</label>
    			<div class="col-sm-4">
      				<input ng-model="dateTill" maxlength="4" class="form-control" id="focusedInput" type="number" placeholder="Enter Year">
   				 </div>
 			 </div>
 			 <div class="form-group">
    			<label class="col-sm-2 control-label">CompanyName :</label>
    			<div class="col-sm-10">
      				<input ng-model="companyName" class="form-control" id="focusedInput" type="text" placeholder="Enter company name">
   				 </div>
 			 </div>
 			 <div class="form-group">
				  <label class="col-sm-2 control-label">Location :</label>
    				<div class="col-sm-10">
    					<input ng-model="location" class="form-control" id="focusedInput" type="text" placeholder="Enter company name">
					</div>
			</div>
 			 <div class="form-group">
    			<label class="col-sm-2 control-label">Summary :</label>
    			<div class="col-sm-10">
      				<textarea ng-model="summary" class="form-control" id="focusedInput" type="text" placeholder="Enter summary"></textarea>
   				 </div>
 			 </div>
 			<div class="form-group">
			  <label class="col-sm-2 control-label">Description</label>
    			<div class="col-sm-10">
			  		<textarea ng-model="description" class="form-control" rows="5" maxlength="500" id="comment"></textarea>
				</div>
			</div>
			<button type="submit" ng-click="saveExpInfo()" class="btn btn-info">Save</button>&nbsp;&nbsp; <button data-toggle="collapse" data-target="#addExperience" type="button" class="btn btn-default">Cancel</button>
 			 </form>
			</div>
		<div ng-repeat="x in experiences" >
			<div class="container" onmouseover="this.style.background='#eee';" onmouseout="this.style.background='white';" style="width:auto;" contenteditable="true">
				<h3><span ng-hide="editing" ng-click="editing = true">{{x.title}}</span></h3>
				<p><span ng-hide="editing" ng-click="editing = true">{{x.dateFrom}} - {{x.dateTill}}</span></p>
				<p><span ng-hide="editing" ng-click="editing = true">{{x.companyName}}</span></p>
				<p><span ng-hide="editing" ng-click="editing = true">{{x.location}}</span></p>
				<p><span ng-hide="editing" ng-click="editing = true">{{x.summary}}</span></p>
				<p><span ng-hide="editing" ng-click="editing = true">{{x.description}}</span></p>
				<form ng-show="editing" ng-submit="editing = false">
                    <label>Role:</label>
                    <input type="text" ng-model="x.title" placeholder="Name" ng-required/>
                    <label>Date From:</label>
                    <input type="number" ng-model="x.dateFrom" maxlength="4" placeholder="Year" />
                    <label>Date Till:</label>
                    <input type="number" ng-model="x.dateTill" maxlength="4" placeholder="Year" />
                    <label>Company name:</label>
                    <input type="text" ng-model="x.companyName" placeholder="Company" />
                    <label>Location:</label>
                    <input type="text" ng-model="x.location" placeholder="City" />
                    <label>Summary:</label>
                    <input type="text" ng-model="x.summary" placeholder="summary"/>
                   <label>Description:</label>
                    <textarea type="text" ng-model="x.description" rows="4" maxlength="500" placeholder="description"></textarea>
                  
                    <br/>
                    <button class="btn btn-info " type="submit" ng-click="editExp(x)">Save</button> &nbsp;&nbsp; <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
                  </form>
			</div>
		</div>
		</div>
		<a ><div class="panel-footer"  data-toggle="collapse" data-target="#addExperience" style="text-align: center;">Add Experience</div></a>
		
</div>
	 
 <div class="container" style="height: 10px"></div>
<div ng-controller="displaySkill" class="panel panel-default" style="background-color:#ffffff; height: auto; width:auto;"  >
	<div class="panel-body">
	<h2>Skills</h2>
