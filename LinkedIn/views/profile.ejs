                  		  		<button class="btn btn-info " type="submit" ng-click="editSkill(x)">Edit</button> &nbsp;&nbsp; <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
                  		 </form>
                  	</div>
                  	 			
