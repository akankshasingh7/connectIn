  <script src="/js/profile.js"></script>
</head>
<body ng-app="" style="background-color:lavender">
<div class="row" style="height: 100px;">
	<div class="col-md-12">
	<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar">My Profile</span>
            <span class="icon-bar">My Connections</span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">LinkedIn</a>
          
        </div>
        <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li ><a href="/myProfile">Profile</a></li>
            <li class="active"><a href="/myConnections">Connections</a></li>
            <li ><a href="/displayMembers">Search Members</a></li>
         	
          	<li ><a href="/logout">Logout</a></li>
          </ul>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>
   </div>
   </div> <!-- end of header row -->
   <div class="row" style="height:auto;">
   	<div class="col-md-2" ></div> 
   	<div class="col-md-6" >
    
  <div class="panel panel-default" style="width:auto;height: auto;">
  <div class="panel-heading">
    <h4 class="panel-title">Connections</h4><p align="right"><span class="glyphicon glyphicon-envelope"></span></p>
  </div>
  <div ng-controller="displayConnections" class="panel-body">
  <div ng-repeat="x in connections">
       	<div class="row" style="border-bottom: solid 2px;border-bottom-color: #eee; height: 100px;">
       		<div class="col-md-4">
       		<img src="../images/pic2.jpg" class="img-thumbnail" alt="image" width="80" height="80">
       		</div>
       		<div class="col-md-5">
       		       			<h4><p><span >{{x.firstName}}</span> &nbsp;&nbsp;<span >{{x.lastName}}</span></p></h4>
				<p><span >{{x.city}}</span> , <span >{{x.country}}</span></p>
			</div>
			<div class="col-md-3">
				<button class="btn btn-default">Friends</button>
			</div>
		</div>  
   </div>  	
