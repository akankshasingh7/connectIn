<html>
<head>
	<script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
  <link rel="stylesheet" href="../public/stylesheets/bootstrap.min.css">
  <script src= "http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
  </head>
<body ng-app="">
<div class="row" style="height: 60px; background-color: #eee;border-bottom:aqua;">
	<div class="col-md-4" >
		<div class="container" style="width:auto;">
			<h1 style="text-align: right;"><img src="https://static.licdn.com/scds/common/u/img/logos/logo_132x32_2.png" alt="LinkedIn" class="logo" height="32" width="132"></h1>

		</div>
	</div>
	<div class="col-md-2">
		
	</div>
	<div class="col-md-6">
	
	</div>
   </div> <!-- end of header row -->
   <div class="row" style="height: 100px;">
   		<h4><p align="center">We just need a few more details before you could get started!! </p></h4>
   </div>
   
   <div class="row">
   		<div class="col-md-3"></div>
   		<div class="col-md-6">
   			<div ng-controller="createUserController" class="panel panel-default" style="width:auto; height: 200px; background-color: #eee;">
   				<form class="form-horizontal">
  					<div class="form-group">
  					<label for="country" class="col-sm-2 control-label">Country</label>
					    <div class="col-sm-10">
					      <input ng-model="country" type="text" class="form-control" id="inputEmail3" placeholder="your country">
					    </div>
					 </div>
					 <div class="form-group">
  					<label for="country" class="col-sm-2 control-label">City</label>
					    <div class="col-sm-10">
					      <input ng-model="city" type="text" class="form-control" id="inputEmail3" placeholder="your city">
					    </div>
					 </div>
					 <div class="form-group">
  					<label for="country" class="col-sm-2 control-label">Current School/Company</label>
					    <div class="col-sm-10">
					      <input ng-model="schoolOrCompany" type="text" class="form-control" id="inputEmail3" placeholder="enter detail">
					    </div>
					 </div>
					 <div class="form-group">
  					<label for="country" class="col-sm-2 control-label">Role</label>
					    <div class="col-sm-10">
					      <input ng-model="role" type="text" class="form-control" id="inputEmail3" placeholder="your role">
					    </div>
					 </div>
					 
					 <p align="center"><button type="button" ng-click="createUser()" >Register Now</button></p>
					
  				</form>
   			</div>
   		</div>
   		<div class="col-md-3"></div>
   </div>
   <script>

	function createUserController($scope,$http)
	{
		$scope.createUser=function()
		{	
			$http({
				method:'POST',
				url:'/createProfile',
				data:{"country": $scope.country, "city": $scope.city,"schoolOrCompany": $scope.schoolOrCompany,"role": $scope.role}

				}).success(function(response){
					if(response.result=="Success")
						window.location = '/myProfile';
					else
						alert(" error in cretaeuser");
					
				}).error(function(response){
					window.location = '/fail';
				});

		};
	
	}

   </script>
   </body>
   </html>
